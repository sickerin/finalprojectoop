<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" fx:id="loginPane" prefHeight="680.0" prefWidth="800.0" style="-fx-background-color: rgba(0, 0, 0, 0);" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chatfrontend.LoginController">
   <children>
      <JFXTextField fx:id="usernameField" layoutX="250.0" layoutY="485.0" prefHeight="40.0" prefWidth="300.0" promptText="Choose your username">
         <font>
            <Font size="16.0" />
         </font></JFXTextField>
      <ImageView fx:id="logoImageView" fitHeight="335.0" fitWidth="335.0" layoutX="225.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logo/Black_Logo.png" />
         </image>
      </ImageView>
      <Text fx:id="welcomeText" layoutX="180.0" layoutY="138.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to SwingChat">
         <font>
            <Font name="Dosis-Bold" size="50.0" />
         </font>
      </Text>
      <JFXButton fx:id="loginButton" contentDisplay="GRAPHIC_ONLY" layoutX="375.0" layoutY="574.0" onAction="#loginButtonListener">
         <graphic>
            <FontAwesomeIconView fill="#1d88d0" glyphName="CHEVRON_CIRCLE_RIGHT" size="40" />
         </graphic>
      </JFXButton>
   </children>
</AnchorPane>
